#!/bin/bash

set -e

echo "ğŸ” Detecting package manager..."

# Detect if the system uses dnf or apt
if command -v dnf >/dev/null 2>&1; then
    echo "ğŸ“¦ DNF-based system detected (Fedora, RHEL, Rocky, CentOS)..."

    echo "ğŸ”„ Updating the system with DNF..."
    sudo dnf check-update  # Check if there are updates
    sudo dnf upgrade -y    # Perform the upgrade without asking
elif command -v apt >/dev/null 2>&1; then
    echo "ğŸ“¦ APT-based system detected (Ubuntu, Debian)..."
    
    echo "ğŸ”„ Updating the system with APT..."
    sudo apt update        # Update the package list
    sudo apt upgrade -y    # Perform the package upgrade
else
    echo "âŒ Neither dnf nor apt found. Unsupported system."
    exit 1
fi

# Confirmation of the update
echo "âœ… The system has been successfully updated."
